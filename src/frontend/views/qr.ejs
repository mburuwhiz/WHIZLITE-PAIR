<%- include('partials/header') %>

<div class="linker-container" id="qr-linker">
    <div class="left-panel">
        <h1>Link with QR Code</h1>
        <p>A QR code will be generated below. Please scan it using the WhatsApp application on your phone.</p>
        <div class="qr-code-area" id="qr-code-area">
            <!-- QR Code will be injected here -->
            <div id="loader" class="loader" style="display: none;"></div>
        </div>
        <button id="generate-qr-btn" class="action-button">Generate QR Code</button>
    </div>
    <div class="right-panel">
        <div class="log-viewer">
            <div class="log-header">
                <h2>Session Logs</h2>
                <span class="log-status" id="log-status-indicator">Awaiting Session...</span>
            </div>
            <pre class="log-box" id="log-box"></pre>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
